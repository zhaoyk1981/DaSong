@model EditOrderViewModel
@{
    ViewBag.Title = "售后";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="vw-shouhou-order vw-order-form" data-page-js="shouhouorder">
    <h2>售后</h2>
    <form>
        <fieldset>
            <input type="hidden" name="ID" id="LblOrderID" value="@Model.Order.ID.Value" />
            <div class="form-group">
                <label>进货日期</label>
                <div>@Model.Order.进货日期.Value.ToString("yyyy-MM-dd HH:mm")</div>
            </div>
            <div class="form-group">
                <label>产品图片</label>
                <div>
                    <a href="@Model.Order.商品图片">
                        <img src="@Model.Order.商品图片" />
                    </a>
                </div>
            </div>
            <div class="form-group">
                <label>采购人</label>
                <div>@DP.Txt(Model.Order.采购人)</div>
            </div>
            <div class="form-group">
                <label>货号</label>
                <div>@DP.Txt(Model.Order.货号)</div>
            </div>
            <div class="form-group">
                <label>进货数量</label>
                <div>@DP.Txt(Model.Order.进货数量)</div>
            </div>
            <div class="form-group">
                <label>店铺名称</label>
                <div>@DP.Txt(Model.Order.店铺.Name)</div>
            </div>
            <div class="form-group">
                <label>JD订单号</label>
                <div>@DP.Txt(Model.Order.JD订单号)</div>
            </div>
            <div class="form-group">
                <label>客人地址</label>
                <div>@DP.Txt(Model.Order.客人地址)</div>
            </div>
            <div class="form-group">
                <label>淘宝账号</label>
                <div>@DP.Txt(Model.Order.淘宝账号)</div>
            </div>
            <div class="form-group">
                <label>淘宝订单号</label>
                <div>@DP.Txt(Model.Order.淘宝订单号)</div>
            </div>
            <div class="form-group">
                <label>京东SKU及采购备注</label>
                <div>@DP.Txt(Model.Order.采购备注)</div>
            </div>
            <div class="form-group">
                <label>订单修改备注</label>
                <div>@DP.Txt(Model.Order.订单修改备注)</div>
            </div>
            <div class="form-group">
                <label>来-快递单号</label>
                <div>@DP.Txt(Model.Order.来快递单号)</div>
            </div>
            <div class="form-group">
                <label>发货时间</label>
                <div>@DP.Txt(Model.Order.发货时间)</div>
            </div>
            <div class="form-group">
                <label>发货备注</label>
                <div>@DP.Txt(Model.Order.发货备注)</div>
            </div>
            <div class="form-group">
                <label>京东价</label>
                <div>@DP.Txt(Model.Order.京东价)</div>
            </div>
            <div class="form-group">
                <label>导入时间</label>
                <div>@DP.Txt(Model.Order.导入时间)</div>
            </div>
            <div class="form-group">
                <label>电话客服</label>
                <div>@DP.Txt(Model.Order.电话客服)</div>
            </div>
            <div class="form-group">
                <label>电话情况</label>
                <div>@DP.Txt(Model.Order.电话情况)</div>
            </div>
            <div class="form-group">
                <label>审单操作</label>
                <div>@DP.Txt(Model.Order.审单操作)</div>
            </div>
            <div class="form-group">
                <label>拆包人员备注</label>
                <div>@DP.Txt(Model.Order.拆包人员备注)</div>
            </div>
            <div class="form-group">
                <label>转发单号</label>
                <div>@DP.Txt(Model.Order.转发单号)</div>
            </div>
            <div class="form-group">
                <label>拆包人</label>
                <div>@DP.Txt(Model.Order.拆包人)</div>
            </div>
            <div class="form-group">
                <label>拆包时间</label>
                <div>@(DP.Txt(Model.Order.拆包时间))</div>
            </div>
            <div class="form-group">
                <label for="Ddl售后操作ID">售后操作</label>
                <select class="form-control" name="售后操作ID" id="Ddl售后操作ID">
                    @foreach (var op in Model.售后操作DataSource)
                    {
                        <option value="@op.ID.Value" @(Model.Order.售后操作ID == op.ID.Value ? "selected" : "")>@op.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="Ddl售后原因ID">售后原因</label>
                <select class="form-control" name="售后原因ID" id="Ddl售后原因ID">
                    @foreach (var op in Model.售后原因DataSource)
                    {
                        <option value="@op.ID.Value" @(Model.Order.售后原因ID == op.ID.Value ? "selected" : "")>@op.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="Txt售后备注">售后备注</label>
                <textarea class="form-control" name="售后备注" id="Txt售后备注">@DP.Txt(Model.Order.售后备注, "")</textarea>
            </div>
            <div class="form-group">
                <label>客人退回单号</label>
                <input type="text" class="form-control" name="客人退回单号" id="Txt客人退回单号" maxlength="50" value="@DP.Txt(Model.Order.客人退回单号, "")" />
            </div>
            <div class="form-group">
                <label>是否淘宝退回</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="是否淘宝退回" data-type="bool" id="Chk是否淘宝退回" @(Model.Order.是否淘宝退回.GetValueOrDefault() ? "checked" : "") />
                    <label class="form-check-label" for="Chk是否淘宝退回">是</label>
                </div>
            </div>
            <div class="form-group">
                <label>售后完结</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="售后完结" data-type="bool" id="Chk售后完结" @(Model.Order.售后完结.GetValueOrDefault() ? "checked" : "") />
                    <label class="form-check-label" for="Chk售后完结">是</label>
                </div>
            </div>

            <div class="form-group">
                <button type="button" class="btn btn-primary" id="BtnSubmit">提交</button>
            </div>
        </fieldset>
    </form>
</div>
