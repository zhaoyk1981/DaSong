
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2>新建采购订单</h2>
    <form>
        <fieldset>
            <div class="form-group">
                <label for="Txt货号">货号</label>
                <input type="text" class="form-control" name="货号" id="Txt货号" maxlength="50" />
            </div>
            <div class="form-group">
                <label for="Txt进货数量">进货数量</label>
                <input type="number" class="form-control" name="进货数量" min="1" step="1" />
            </div>
            <div class="form-group">
                <label>店铺名称</label>
                <select class="form-control"></select>
            </div>
            <div class="form-group">
                <label>JD订单号</label>
                <input type="text" class="form-control" name="JD订单号" maxlength="50" />
            </div>
            <div class="form-group">
                <label>客人地址</label>
                <textarea class="form-control" name="客人地址" maxlength="150"></textarea>
            </div>
            <div class="form-group">
                <label>淘宝账号</label>
                <select></select>
            </div>
            <div class="form-group">
                <label>淘宝订单号</label>
                <input type="text" class="form-control" name="淘宝订单号" maxlength="50" />
            </div>
            <div class="form-group">
                <label>采购备注</label>
                <textarea class="form-control" name="采购备注"></textarea>
            </div>
            <div class="form-group">
                <label>订单修改备注</label>
                <textarea class="form-control" name="订单修改备注"></textarea>
            </div>
            <div class="form-group">
                <label>来-快递单号</label>
                <input type="text" class="form-control" name="来快递单号"/>
            </div>
            <div class="form-group">
                <label>发货时间</label>
                <input type="datetime-local" class="form-control" name="发货时间" />
            </div>
            <div class="form-group">
                <label>京东价</label>
                <input type="number" step="0.01" min="0" class="form-control" name="京东价" />
            </div>
            <div class="form-group">
                <label>成本价</label>
                <input type="number" step="0.01" min="0" class="form-control" name="成本价" />
            </div>
            <div>
                <button type="button">创建</button>
            </div>
        </fieldset>
    </form>
</div>
