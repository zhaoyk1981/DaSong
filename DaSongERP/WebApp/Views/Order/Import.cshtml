@model OrderListViewModel
@{
    ViewBag.Title = "电话客服导入";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="vw-import-order vw-order-list" data-page-js="importorders">
    @Html.Partial("_Nav")
    <h2>电话客服导入</h2>
    <form validation-group="default" autocomplete="off">
        <fieldset>
            <div class="form-group">
                <label for="IptExcel">Excel</label>
                <input type="file" class="form-control" id="IptExcel" />
                <span class="validator" id="vdFile" data-required="" data-validate-target="#IptExcel"><span class="error-message text-danger">此项必填</span></span>
            </div>
        </fieldset>
        <div>
            <button type="button" class="btn btn-primary" id="BtnSubmit">上传</button>
        </div>
        <br />
        <br />
        <a href="/Order/Import" id="LblMessage" class="alert alert-info hide-when-empty"></a>
    </form>
    <br />
    <br />
    <br />
    <div>
        <table class="table table-striped table-bordered table-hover dataTable">
            <thead>
                <tr>
                    <th>序号</th>
                    <th>图片</th>
                    <th>进货日期</th>
                    <th>JD订单号</th>
                    <th>进货数量</th>
                    <th>来快递单号</th>
                    <th>客人地址</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Orders.Count; i++)
                {
                    <tr data-id="@Model.Orders[i].ID.Value">
                        <td>@(i + 1)</td>
                        <td>
                            <a href="@(Model.Orders[i].商品图片)" target="_blank">
                                <img src="@(Model.Orders[i].商品图片)" class="product-thumbnail" />
                            </a>
                        </td>
                        <td>@DP.Txt(Model.Orders[i].进货日期)</td>
                        <td>@DP.Txt(Model.Orders[i].JD订单号)</td>
                        <td>@DP.Txt(Model.Orders[i].进货数量)</td>
                        <td>@DP.Txt(Model.Orders[i].来快递单号)</td>
                        <td>@DP.Txt(Model.Orders[i].客人地址)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

