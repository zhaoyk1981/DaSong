@model EditOrderViewModel
@{
    ViewBag.Title = "ChaiBao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="vw-chaibao-order vw-order-form" data-page-js="chaibaoorder">
    @Html.Partial("_Nav")
    <h2>拆包审单</h2>
    <form>
        <input type="hidden" name="ID" id="LblOrderID" value="@Model.Order.ID.Value" />
        <fieldset>
            <legend>采购</legend>
            <div class="row">
                <div class="form-group col-6">
                    <label>进货日期</label>
                    <div>@DP.Txt(Model.Order.进货日期)</div>
                </div>
                <div class="form-group col-6">
                    <a href="@Model.Order.商品图片" target="_blank">
                        <img src="@Model.Order.商品图片" class="product-image" />
                    </a>
                </div>
                <div class="form-group col-6">
                    <label>货号</label>
                    <div>@DP.Txt(Model.Order.货号)</div>
                </div>
                <div class="form-group col-6">
                    <label>进货数量</label>
                    <div>@DP.Txt(Model.Order.进货数量)</div>
                </div>
                <div class="form-group col-6">
                    <label>店铺名称</label>
                    <div>@DP.Txt(Model.Order.店铺)</div>
                </div>
                <div class="form-group col-6">
                    <label>JD订单号</label>
                    <div>@DP.Txt(Model.Order.JD订单号)</div>
                </div>
                <div class="form-group col-6">
                    <label>客人地址</label>
                    <div id="LblCustAddr">@DP.Txt(Model.Order.客人地址)</div>
                </div>
                <div class="form-group col-6">
                    <label>京东SKU及采购备注</label>
                    <div>@DP.Txt(Model.Order.采购备注)</div>
                </div>
                <div class="form-group col-6">
                    <label>订单修改备注</label>
                    <div>@DP.Txt(Model.Order.订单修改备注)</div>
                </div>
                <div class="form-group col-6">
                    <label>京东价</label>
                    <div>@DP.Txt(Model.Order.京东价)</div>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>跟进</legend>
            <div class="row">
                <div class="form-group col-6">
                    <label>来-快递单号</label>
                    <div>@DP.Txt(Model.Order.来快递单号)</div>
                </div>
                <div class="form-group col-6">
                    <label>发货时间</label>
                    <div>@DP.Txt(Model.Order.发货时间)</div>
                </div>
                <div class="form-group col-6">
                    <label>发货备注</label>
                    <div>@DP.Txt(Model.Order.发货备注)</div>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>电话客服导入</legend>
            <div class="row">
                <div class="form-group col-6">
                    <label>导入时间</label>
                    <div>@DP.Txt(Model.Order.导入时间)</div>
                </div>
                <div class="form-group col-6">
                    <label>电话客服</label>
                    <div>@DP.Txt(Model.Order.电话客服)</div>
                </div>
                <div class="form-group col-6">
                    <label>电话情况</label>
                    <div>@DP.Txt(Model.Order.电话情况)</div>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>售后</legend>
            <div class="row">
                <div class="form-group col-6">
                    <label>售后操作</label>
                    <div>@DP.Txt(Model.Order.售后操作)</div>
                </div>
                <div class="form-group col-6">
                    <label>售后原因</label>
                    <div>@DP.Txt(Model.Order.售后原因)</div>
                </div>
                <div class="form-group col-6">
                    <label>售后备注</label>
                    <div>@DP.Txt(Model.Order.售后备注)</div>
                </div>
                <div class="form-group col-6">
                    <label>售后人</label>
                    <div>@DP.Txt(Model.Order.售后人员)</div>
                </div>
                <div class="form-group col-6">
                    <label>售后时间</label>
                    <div>@DP.Txt(Model.Order.售后时间)</div>
                </div>
                <div class="form-group col-6">
                    <label>客人退回单号</label>
                    <div>@DP.Txt(Model.Order.客人退回单号)</div>
                </div>
            </div>
        </fieldset>
        <fieldset>
            <legend>拆包审单</legend>
            <div class="form-group">
                <a href="javascript:void(0)" class="btn-copy-cust-addr">点击复制客户地址</a>
                <input type="text" id="TxtCustAddr" readonly class="clip-copy" value="@Model.Order.客人地址" />
            </div>
            <div class="form-group">
                <label for="Ddl审单操作">审单操作</label>
                <select class="form-control" id="Ddl审单操作" name="审单操作ID">
                    @foreach (MetaModel m in Model.审单操作DataSource)
                    {
                        <option value="@m.ID.Value" @(Model.Order.审单操作ID.GetValueOrDefault() == m.ID.Value ? "selected" : "")>@m.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>拆包人员备注</label>
                <textarea class="form-control" name="拆包人员备注" id="Txt拆包人员备注">@Model.Order.拆包人员备注</textarea>
            </div>
            <div class="form-group">
                <label>转发单号</label>
                <input type="text" class="form-control" name="转发单号" id="Txt转发单号" maxlength="50" value="@Model.Order.转发单号" />
                <span class="validator" id="vd转发单号" data-required="" data-validate-target="#Txt转发单号"><span class="error-message text-danger">此项必填</span></span>
            </div>
        </fieldset>
        <div class="form-group">
            <button type="button" class="btn btn-primary" id="BtnSubmit">提交</button>
        </div>
    </form>
</div>
