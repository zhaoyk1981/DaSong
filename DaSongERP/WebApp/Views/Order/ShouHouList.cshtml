@model OrderListViewModel
@{
    ViewBag.Title = "售后订单列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="vw-order-list vw-shouhou-list" data-page-js="shouhoulist">
    @Html.Partial("_Nav")
    <h2>售后订单列表</h2>
    <div class="search-conditions">
        <form>
            <fieldset default-button="#BtnSearch">
                <div class="row">
                    <div class="form-group col-12">
                        <label for="TxtSearch">JD订单号</label>
                        <input type="text" class="form-control" name="JD订单号" id="TxtJD订单号" maxlength="50" on-enter value="@Model.Condition.JD订单号" />
                    </div>
                    <div class="form-group col-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="售后完结" data-type="bool" id="Chk售后完结" @(Model.Condition.售后完结.GetValueOrDefault() ? "checked" : "") />
                            <label class="form-check-label" for="Chk售后完结">售后完结</label>
                        </div>
                    </div>
                    <div class="form-group col-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="售后人员ID" id="Chk售后人员ID" value="@ViewData["UserID"]" @(Model.Condition.售后人员ID.HasValue ? "checked" : "") />
                            <label class="form-check-label" for="Chk售后人员ID">只看我的</label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="form-group">
                <button type="button" class="btn btn-primary" id="BtnSearch">查询</button>
            </div>
            <div id="LblMessage" class="alert alert-danger"></div>
        </form>
    </div>
    <div>
        <table class="table table-striped table-bordered table-hover dataTable">
            <thead>
                <tr>
                    <th>序号</th>
                    <th>图片</th>
                    <th>进货日期</th>
                    <th>JD订单号</th>
                    <th>淘宝订单号</th>
                    <th>进货数量</th>
                    <th>来快递单号</th>
                    <th>客人地址</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Orders.Count; i++)
                {
                    <tr data-id="@Model.Orders[i].ID.Value">
                        <td>@(i + 1)</td>
                        <td>
                            <a href="@(Model.Orders[i].商品图片)" target="_blank">
                                <img src="@(Model.Orders[i].商品图片)" class="product-thumbnail" />
                            </a>
                        </td>
                        <td>@DP.Txt(Model.Orders[i].进货日期)</td>
                        <td>@DP.Txt(Model.Orders[i].JD订单号)</td>
                        <td>@DP.Txt(Model.Orders[i].淘宝订单号)</td>
                        <td>@DP.Txt(Model.Orders[i].进货数量)</td>
                        <td>@DP.Txt(Model.Orders[i].来快递单号)</td>
                        <td>@DP.Txt(Model.Orders[i].客人地址)</td>
                        <td>
                            <a href="/Order/ShouHou/@Model.Orders[i].ID.Value" class="btn btn-primary btn-shouhou">售后</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
