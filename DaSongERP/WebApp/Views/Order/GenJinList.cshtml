@model 跟进ListViewModel
@{
    ViewBag.Title = "跟进列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
    <script id="tmplRow" type="x-tmpl-mustache">
        <tr data-id="{{ID}}">
            <td>{{SN}}</td>
            <td>
                <a href="{{商品图片}}" target="_blank">
                    <img src="{{商品图片}}" class="product-thumbnail" />
                </a>
            </td>
            <td>{{Str进货日期}}</td>
            <td>{{JD订单号}}</td>
            <td>{{淘宝订单号}}</td>
            <td>{{进货数量}}</td>
            <td>{{来快递单号}}</td>
            <td>{{客人地址}}</td>
            <td>
                <a href="/Order/GenJin/{{ID}}" class="btn btn-primary btn-edit">跟进订单</a>
            </td>
        </tr>
    </script>
}

<div class="vw-order-list vw-genjin-list" data-page-js="genjinlist" vm-json="@Model.Json">
    <h2>@ViewBag.Title</h2>
    <hr />
    <div class="filters">
        <form autocomplete="off">
            <fieldset>
                <div class="form-group">
                    <label>JD订单号</label>
                    <input type="text" name="JD订单号" class="form-control" id="TxtJD订单号" autocomplete="new-password" />
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="拆包超时" id="Chk拆包超时" />
                        <label class="form-check-label" for="Chk售后完结">
                            超过<select id="Ddl拆包超时">
                                @for (var i = 2; i <= 10; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>天未拆包
                        </label>
                    </div>
                </div>
            </fieldset>
            <div>
                <button type="button" class="btn btn-primary" id="BtnSearch">查询</button>
            </div>
        </form>
    </div>
    <div class="repeater">
        <div>当前记录：<span class="lbl-current-page-record-start"></span>~<span class="lbl-current-page-record-end"></span>/<span class="lbl-records-count"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;页数：<span class="lbl-current-page-number"></span>/<span class="lbl-pages-count"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;每页：<span class="lbl-page-size"></span></div>
        <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline main-table" role="grid">
            <thead>
                <tr>
                    <th>序号</th>
                    <th>图片</th>
                    <th>进货日期</th>
                    <th>JD订单号</th>
                    <th>淘宝订单号</th>
                    <th>进货数量</th>
                    <th>来快递单号</th>
                    <th>客人地址</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody class="repeat-items"></tbody>
        </table>
        <div class="paging">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item">
                        <a href="javascript:void(0)" aria-label="Previous" class="btn-first-page page-link">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a href="javascript:void(0)" aria-label="Next" class="btn-last-page page-link">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

