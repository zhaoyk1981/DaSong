@model 热销商品统计ViewModel
@{
    ViewBag.Title = "热销商品统计";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
    <script id="tmplRow" type="x-tmpl-mustache">
        <tr>
            <td>
                <a href="{{Thumbnails}}" target="_blank">
                    <img src="{{Thumbnails}}" class="product-thumbnail" />
                </a>
            </td>
            <td>
                <a href="/Order/CaiGouList?hh={{货号}}" target="_blank">{{货号}}</a>
            </td>
            <td>
                {{Str总销量}}
            </td>
            <td>{{Str订单数}}</td>
            <td>{{现货数量}}</td>
            <td>{{在途数量}}</td>
            <td>{{虚拟数量}}</td>
            @*<td>
                    <a href="#" class="btn btn-primary btn-view" target="_blank">查看订单</a>
                </td>*@
        </tr>
    </script>
}

<div class="vw-tongji vw-tongji-top-sales" data-page-js="tjtopsales" vm-json="@Model.Json">
    @Html.Partial("_Nav")
    <h2>@ViewBag.Title</h2>
    <hr />
    <div class="filters">
        <div class="form" validation-group="submit">
            <fieldset>
                <div class="row">
                    <div class="form-group col-6">
                        <label for="TxtDateStart">日期：</label>
                        <input type="date" id="TxtDateStart" name="DateStart" class="form-control" value="@Model.DateStart.Value.ToString("yyyy-MM-dd")" />
                        <span class="validator" id="vdDateStart" data-required="" data-validate-target="#TxtDateStart"><span class="error-message text-danger">此项必填</span></span>
                    </div>
                    <div class="form-group col-6">
                        <label for="TxtDateEnd">日期：</label>
                        <input type="date" id="TxtDateEnd" name="DateEnd" class="form-control" value="@Model.DateEnd.Value.ToString("yyyy-MM-dd")" />
                        <span class="validator" id="vdDateEnd" data-required="" data-validate-target="#TxtDateEnd"><span class="error-message text-danger">此项必填</span></span>
                    </div>
                </div>
                <div>
                    <button type="button" class="btn btn-primary btn-submit">统计</button>
                </div>
            </fieldset>
        </div>
    </div>
    <hr />
    <div class="repeater">
        <div class="paging">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a href="javascript:void(0)" aria-label="Previous" class="btn-first-page page-link">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a href="javascript:void(0)" aria-label="Next" class="btn-last-page page-link">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <div>当前记录：<span class="lbl-current-page-record-start"></span>~<span class="lbl-current-page-record-end"></span>/<span class="lbl-records-count"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;页数：<span class="lbl-current-page-number"></span>/<span class="lbl-pages-count"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;每页：<span class="lbl-page-size"></span></div>
        <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" role="grid">
            <thead>
                <tr>
                    <th>商品图片</th>
                    <th>货号</th>
                    <th>总销量</th>
                    <th>订单数</th>
                    <th>现货数量</th>
                    <th>在途数量</th>
                    <th>虚拟数量</th>
                </tr>
            </thead>
            <tbody class="repeat-items"></tbody>
        </table>
        <div class="paging">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a href="javascript:void(0)" aria-label="Previous" class="btn-first-page page-link">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a href="javascript:void(0)" aria-label="Next" class="btn-last-page page-link">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

