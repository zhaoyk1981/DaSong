@model 库存动量ListViewModel
@{
    ViewBag.Title = "库存动量历史";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
    <script id="tmplRow" type="x-tmpl-mustache">
        <tr data-id="{{ID}}">
            <td>{{StrDateCreated}}</td>
            <td>{{现货数量}}</td>
            <td>{{UserName}}</td>
            <td>{{{Remark}}}</td>
        </tr>
    </script>
}

<div class="vw-paging-list vw-stock-list" data-page-js="stockhistories" vm-json="@Model.Json">
    @Html.Partial("_Nav")
    <h2>@ViewBag.Title</h2>
    <hr />
    <div class="form" default-button="#BtnSearch">
        <div class="filters">
            <fieldset>
                <input type="hidden" name="库存商品ID" id="Lbl库存商品ID" value="@Model.库存商品.ID.Value" />
                <div class="row">
                    <div class="form-group col-6">
                        <a href="@Model.库存商品.Thumbnails" target="_blank">
                            <img src="@Model.库存商品.Thumbnails" class="product-image" />
                        </a>
                    </div>
                    <div class="form-group col-6">
                        <label class="static-label">商品名称：</label>
                        <span>@DP.Txt(Model.库存商品.Name)</span>
                    </div>
                    <div class="form-group col-6">
                        <label class="static-label">货号：</label>
                        <span>@DP.Txt(Model.库存商品.货号)</span>
                    </div>
                    <div class="form-group col-6">
                        <label class="static-label">规格：</label>
                        <span>@DP.Txt(Model.库存商品.规格)</span>
                    </div>
                    <div class="form-group col-6">
                        <label class="static-label">仓库：</label>
                        <span>@DP.Txt(Model.库存商品.仓库)</span>
                    </div>
                    <div class="form-group col-6">
                        <label class="static-label">库位：</label>
                        <span>@DP.Txt(Model.库存商品.库位)</span>
                    </div>
                    <div class="form-group col-6">
                        <label class="static-label">现货数量：</label>
                        <span>@DP.Txt(Model.库存商品.现货数量.GetValueOrDefault().ToString("F0"))</span>
                    </div>
                    <div class="form-group col-6">
                        <label class="static-label">在途数量：</label>
                        <span>@DP.Txt(Model.库存商品.在途数量.GetValueOrDefault().ToString("F0"))</span>
                    </div>
                    <div class="form-group col-6">
                        <label class="static-label">虚拟数量：</label>
                        <span>@DP.Txt(Model.库存商品.虚拟数量.GetValueOrDefault().ToString("F0"))</span>
                    </div>
                    <div class="form-group col-6">
                        <label class="static-label">创建人：</label>
                        <span>@DP.Txt(Model.库存商品.UserName)</span>
                    </div>
                    <div class="form-group col-6">
                        <label class="static-label">创建日期：</label>
                        <span>@DP.Txt(Model.库存商品.DateCreated)</span>
                    </div>
                </div>
            </fieldset>
            <div class="form-group">
                <button type="button" class="btn btn-primary" id="BtnSearch">查询</button>
            </div>
        </div>
    </div>
    <hr />
    <div class="repeater">
        <div class="paging">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a href="javascript:void(0)" aria-label="Previous" class="btn-first-page page-link">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a href="javascript:void(0)" aria-label="Next" class="btn-last-page page-link">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <div>当前记录：<span class="lbl-current-page-record-start"></span>~<span class="lbl-current-page-record-end"></span>/<span class="lbl-records-count"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;页数：<span class="lbl-current-page-number"></span>/<span class="lbl-pages-count"></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;每页：<span class="lbl-page-size"></span></div>
        <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" role="grid">
            <thead>
                <tr>
                    <th>日期</th>
                    <th>数量</th>
                    <th>操作人员</th>
                    <th>备注</th>
                </tr>
            </thead>
            <tbody class="repeat-items"></tbody>
        </table>
        <div class="paging">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a href="javascript:void(0)" aria-label="Previous" class="btn-first-page page-link">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item">
                        <a href="javascript:void(0)" aria-label="Next" class="btn-last-page page-link">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
